<h1>Edit User</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'fields', :f => f %>

      <%= f.submit "Update", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= gravatar_for @user %>
    <a target=_blank href="http://gravatar.com/emails">change</a>
    
  </div>
</div>
