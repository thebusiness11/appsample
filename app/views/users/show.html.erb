<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= render 'follow_form' if signed_in? %>
    </h1>
    </section>
    <section>
        <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">

    <% if @user.microposts.any? %>
      <h3>Microposts <span id="micropost_count">(<%= @user.microposts.count %>)</span></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>